<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/hitlist_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hitlist_OK"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hitlist_duration" >

    </ListView>

    <Spinner
        android:id="@+id/hitlist_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:entries="@array/hitlistduration_entries"
        android:prompt="@string/Duration"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/hitlist_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/Select" />

    <ProgressBar
        android:id="@+id/hitlist_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:layout_centerHorizontal="true" />

</RelativeLayout>