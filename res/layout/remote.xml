<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:clickable="true">

   	<LinearLayout
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_gravity="center_vertical"
   	    android:layout_weight="0.31"
   	    android:background="#ff000000"
   	    android:orientation="vertical" >

        <TextView
            android:id="@+id/remote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:scrollbars="vertical"
            android:text="Transmit values to your own server, which issues the requests for specific sensors. After pressing the button below, the UI will exit and a background service will try to connect. You can change sensor and general settings in the &apos;Settings&apos; tab." />

        <ImageButton
            android:id="@+id/button_remote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:background="#ff000000"
            android:clickable="true"
            android:contentDescription="Start remote sensing"
            android:hapticFeedbackEnabled="true"
            android:onClick="onClick"
            android:src="@drawable/start" />

    </LinearLayout>		
 </LinearLayout>