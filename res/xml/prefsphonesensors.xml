<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Phone and System Sensor Settings">
    <CheckBoxPreference 
    	android:enabled="true" 
    	android:defaultValue="true"
    	android:title="Enable Phone Sensors" 
    	android:key="PhoneSensorsHandler::SensorsON" 
    	android:selectable="true" 
    	android:summaryOn="Enable Phone sensors, like orientation, light etc, to show up in sensor list" 
    	android:summaryOff="Do not use Phone sensors"/>
    <EditTextPreference
        android:summary="Poll interval for orientation sensor in seconds"
        android:defaultValue="5"
        android:numeric="integer"
        android:title="Orientation Interval [s]"
        android:key="PhoneSensorsHandler::OrientationPoll"/>
    <EditTextPreference
        android:summary="Poll interval for proximity sensor in seconds"
        android:defaultValue="5"
        android:numeric="integer"
        android:title="Proximity Interval [s]"
        android:key="PhoneSensorsHandler::ProximityPoll"/>    
    <EditTextPreference
        android:summary="Poll interval for system information like RAM, tasks, etc"
        android:defaultValue="5"
        android:numeric="integer"
        android:title="System Poll Interval [s]"
        android:key="SystemSensorsHandler::SystemPoll"/>    
</PreferenceScreen>
